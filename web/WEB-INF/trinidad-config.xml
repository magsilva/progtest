<?xml version="1.0"?>

<!--
	Apache Trinidad configuration file. Futher information can be found
	at "http://myfaces.apache.org/trinidad/devguide/configuration.html" 
 -->
<trinidad-config xmlns="http://myfaces.apache.org/trinidad/config">

	<!-- Enable debug output -->
	<debug-output>true</debug-output>
	
	<!--
		Controls how client-side converters and validators are run. Three
		values are supported: 
			- "INLINE": validation is shown inline in a page (the default)
			- "ALERT": validation is shown in an Javascript alert
			- "DISABLED": validation is only handled on the server
	-->
	<client-validation>INLINE</client-validation>
	
	<!--
		Name of a class that implements the org.apache.myfaces.trinidad.webapp.UploadedFileProcessor
		interface. This API is responsible for processing each individual uploaded file as they come 
		from the incoming request and making its contents available for the rest of the request.
	-->
	<!-- 
	<uploaded-file-processor></uploaded-file-processor>
	-->
</trinidad-config>